# Correct and Minimal .htaccess for React on Hostinger

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # --- Ezoic ads.txt Redirect ---
  # This rule must come before the React app handler.
  RewriteRule ^ads\.txt$ https://srv.adstxtmanager.com/19305/dataengineerhub.blog [R=301,L]

  # --- React Application Handler ---
  # If the request is NOT for an existing file...
  RewriteCond %{REQUEST_FILENAME} !-f
  # ...and if the request is NOT for an existing directory...
  RewriteCond %{REQUEST_FILENAME} !-d
  # ...then send the request to index.html for React to handle.
  RewriteRule . /index.html [L]
</IfModule>